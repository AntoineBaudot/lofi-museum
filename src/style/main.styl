// FONTS

@font-face {
    font-family: 'Lato';
    src: url('../fonts/Lato-Light.woff2') format('woff2'),
        url('../fonts/Lato-Light.woff') format('woff');
    font-weight: 300;
    font-style: normal;
}

@font-face {
    font-family: 'Lato';
    src: url('../fonts/Lato-Bold.woff2') format('woff2'),
        url('../fonts/Lato-Bold.woff') format('woff');
    font-weight: bold;
    font-style: normal;
}

@font-face {
    font-family: 'Lato';
    src: url('../fonts/Lato-Regular.woff2') format('woff2'),
        url('../fonts/Lato-Regular.woff') format('woff');
    font-weight: normal;
    font-style: normal;
}


html
    scroll-behavior: smooth;

*
    margin 0
    padding 0
    box-sizing border-box


body 
    overflow hidden
    background #D8DCFF
    // background #0D0C0D
    // pointer-events none
    // cursor none

/**
 * TYPO
 */

p   
    font-family lato
    font-weight 200
    font-size 30px

a
    text-decoration none
    font-weight 400
    color black
    cursor pointer
    pointer-events auto

/**
 * CURSOR
 */

.cursor-container 
  .pointer 
    width 5pt
    height 5pt
    background black;
    border-radius 50%
    position absolute
    top -2.5pt
    left -2.5pt
    transform translate(0, 0)
    transition all 0.05s ease
  .cursor-wrapper 
    // z-index: 1;
    position absolute
    top -15pt
    left -15pt
    transform translate(0, 0)
    width 30pt
    height 30pt
    transition all 0.1s ease
    .cursor 
      width 30pt
      height 30pt
      border 1pt solid black
      border-radius 50%
 

/**
 * START
 */ 

.start
    z-index 10
    position absolute
    background #D8DCFF
    width 100vw
    height 100vh
    display flex
    flex-direction column
    justify-content center
    align-items center   
    font-family lato
    will-change transform

    p
        color white
        font-size 20px
        text-transform uppercase
        letter-spacing 3px
        margin-bottom 20px
        font-weight 800
    
    button 
        color #C7CDFF 
        padding 5px 10px 5px 10px
        width 100px
        height 35px
        border none
        border-radius 5px
        text-transform uppercase
        letter-spacing 3px
        cursor pointer
        user-select none
        outline none
        font-size 20
        transition-duration 0.5s
        &:hover
            background #C7CDFF 
            color white

/**
 * CANVAS
 */
.canvas
     position absolute
    z-index 3
    top 0
    left 0
    width 50vw
    height 100vh
    canvas
        position absolute
        top 0
        left 0
        pointer-events auto


/*
 * MUTE BUTTON
 */

img.mute,
img.unmute{
    z-index 6
    position absolute
    bottom 40px 
    right 40px
    width 20px
    height 20px
    cursor pointer
}
/*
 * CONTAINER MENU
 */

.background
    z-index -2
    position absolute
    box-sizing border-box
    padding 30px
    width 100vw
    height 100vh
    display flex
    justify-content flex-start
    align-items center

    h1 
        font-family 'Work Sans', sans-serif;
        font-size 200px
        text-transform uppercase
        color #C7CDFF 
        line-height 200px

.container
    width 100vw
    height 100vh
    display flex
    flex-direction column
    justify-content center
    align-items flex-start
    
    .header
        z-index 6
        position absolute
        top 0
        padding 40px
        display flex
        justify-content flex-start
        align-items center

        .logo
            width 50px
            height 50px
            cursor pointer
            margin-right 10px

        h2
            text-decoration none
            font-family lato 
            font-size 14px
            color black
            text-transform uppercase
            font-weight 1000
            letter-spacing 3px
            margin 0px 10px 0px 10px
            cursor pointer

        span
            margin-top 2px
            font-weight 1000

    .modal
        display flex
        align-items center
        justify-content center
        flex-direction column
        position absolute
        padding 30px
        width 100vw
        height 100vh
        opacity 0
        pointer-events none
        background #FFEFF4
        will-change transform


        .title
            position absolute
            display flex
            justify-content flex-start
            width 100%
            padding-left 30px
            h1  
                z-index -1
                font-family 'Work Sans', sans-serif;
                font-size 200px
                text-transform uppercase
                color #FFE6F0
                line-height 200px

            h1.credits
                color #FFECC4

        .container
            position relative
            display flex
            justify-content center
            align-items center
            width 45%
            height auto
        
            .close
                position absolute
                right -50px
                top -50px
                width 20px
                height 20px
                cursor pointer
                pointer-events auto

    .credits
            background #FFF4DE


// HIDDEN

.hidden{
    display none
    }

.fadeOut
    animation-name fadeOut
    animation-duration 1s
    animation-fill-mode forwards


.closeModal
    animation-name closeModal
    animation-duration 0.4s
    animation-fill-mode forwards

.openModal
    animation-name openModal
    animation-duration 0.4s
    animation-fill-mode forwards

@keyframes fadeOut{
    0%{
        opacity 1 
        }
    100%{
        opacity 0 
        }
}

@keyframes openModal{
    
   0%{
        opacity 0 
        }
    100%{
        opacity 1 
        }
}

@keyframes closeModal{
    
    0%{
        opacity 1 
        }
    100%{
        opacity 0 
        }
}