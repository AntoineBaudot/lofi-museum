html
    scroll-behavior: smooth;

*
    margin 0
    padding 0


body 
    overflow hidden
    background #F8E9EE
    // background #0D0C0D
    // pointer-events none
    // cursor none


/**
 * CURSOR
 */

.cursor-container 
  .pointer 
    width 5pt
    height 5pt
    background black;
    border-radius 50%
    position absolute
    top -2.5pt
    left -2.5pt
    transform translate(0, 0)
    transition all 0.05s ease
  .cursor-wrapper 
    // z-index: 1;
    position absolute
    top -15pt
    left -15pt
    transform translate(0, 0)
    width 30pt
    height 30pt
    transition all 0.1s ease
    .cursor 
      width 30pt
      height 30pt
      border 1pt solid black
      border-radius 50%
 

/**
 * START
 */ 

.start
    z-index 4
    position absolute
    background #E8C7D6
    width 100vw
    height 100vh
    display flex
    flex-direction column
    justify-content center
    align-items center   
    font-family lato

    p
        color white
        font-size 20px
        text-transform uppercase
        letter-spacing 3px
        margin-bottom 20px
    
    button 
        color #F2B6CC
        padding 5px 10px 5px 10px
        width 100px
        height 35px
        border none
        border-radius 5px
        text-transform uppercase
        letter-spacing 3px
        cursor pointer
        user-select none
        outline none
        font-size 20
        transition-duration 0.5s
        &:hover
            background #F2B6CC 
            color white

/**
 * CANVAS
 */
.canvas
    z-index 3
    position absolute
    top 0
    left 0
    width 100vw
    height 100vh
    canvas
        position absolute
        top 0
        left 0
        pointer-events auto

/*
 * CONTAINER MENU
 */

.background
    z-index -2
    position absolute
    box-sizing border-box
    padding 20px
    width 100vw
    height 100vh
    display flex
    justify-content flex-start
    align-items center

    h1 
        font-family 'Work Sans', sans-serif;
        font-size 200px
        text-transform uppercase
        color #E8C7D640 
        line-height 200px

.menu
    box-sizing border-box
    padding 20px
    width 100vw
    height 100vh
    display flex
    flex-direction column
    justify-content space-around
    align-items center

    a 
        font-family 'Work Sans', sans-serif;
        font-size 30px
        text-transform uppercase
        font-weight 800
        color white

// HIDDEN

.fadeOut
    animation-name fadeOut
    animation-duration 1s
    animation-fill-mode forwards

.hidden
    display none

@keyframes fadeOut{
    0%{
        opacity 1 
        }
    100%{
        opacity 0 
        }
}
